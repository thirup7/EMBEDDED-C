#include<AT89S52.h>

void wait(void); //*USER FUNCTION*//

void main()
{
 while(1)       //* SUPER LOOP*//
{
 P2_0=0;        //*LED ON*//
 wait();        //*DELAY FOR SOME TIMES*//
 P2_0=1;        //*LED OFF*//
 wait();        //*DELAY FOR SOME TIMES*//
}
}

